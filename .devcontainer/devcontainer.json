{
  "name": "smart-contract-sandbox",
  "image": "charleshetterich/polkavm-dev:0.2",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  // Container setup
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.npm",

  // Startup script
  "postAttachCommand": "sh ~/devcontainer-startup.sh",

  // Optimize rebuilds w/ mounted caches (necessary/good?)
  "mounts": [
    "source=cargo_cache,target=/usr/local/cargo/registry,type=volume",
    "source=npm_cache,target=/home/vscode/.npm,type=volume"
  ],

  // Standard development settings
  // Maybe opinionated & should be removed?
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "rust-lang.rust-analyzer"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  }
}