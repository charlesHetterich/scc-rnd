{
  "name": "smart-contract-sandbox",
  "image": "polkavm-dev:debug", // plain Ubuntu w/o language stacks
  "remoteUser": "vscode",
  "features": {
    // npm/node
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  // Install additional dependencies
  // - cmake (not sure we need cmake anymore since we build the polkadot-sdk stuff elsewhere)
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.npm && subkey generate",

  // Optimize rebuilds w/ mounted caches (necessary/good?)
  "mounts": [
    "source=cargo_cache,target=/usr/local/cargo/registry,type=volume",
    "source=npm_cache,target=/home/vscode/.npm,type=volume"
  ],

  // Standard development settings
  // Maybe opinionated & should be removed?
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "rust-lang.rust-analyzer"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  }
}